@using Entitites
@using Business

@inject NavigationManager NavManager

<div>
    <EditForm Model="oWarehouse">
        <div class="form-group">
            <label for="warehouseId">Referencia:</label>
            <InputText @bind-Value="oWarehouse.WarehouseId" class="form-control"/>
        </div>
        <div class=" form-group">
            <label>Nombre Almacen:</label>
            <InputText @bind-Value="oWarehouse.WarehouseName" class="form-control" />
        </div>
        <div class=" form-group">
            <label>Direccion:</label>
            <InputTextArea @bind-Value="oWarehouse.WarehouseAddress" class="form-control"/>
        </div>

        <input type="button" value="Agrega Almacen" @onclick="SaveWarehouse" />

    </EditForm>
</div>

@code {
    WarehouseEntity oWarehouse = new WarehouseEntity();
    IList<WarehouseEntity> warehouse = new List < WarehouseEntity>();

    protected override async Task OnInitializedAsync()
    {
        warehouse = B_Warehouse.WarehouseList();
    }

    private void SaveWarehouse()
    {
        B_Warehouse.CreateWarehouse(oWarehouse);
        NavManager.NavigateTo("warehouse/list");
    }

     
}


